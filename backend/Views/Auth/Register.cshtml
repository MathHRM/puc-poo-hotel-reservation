@{
    ViewData["Title"] = "Registre-se";
}

<head>
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true">
</head>

<body>

    <div class="container d-flex align-items-center justify-content-center ">

        <div class="card-registration-wrapper row">
            <!-- Coluna da Imagem -->
            <div class="col-md-6 p-0 img-column">
                <!-- Substitua pelo caminho da sua imagem ou use um placeholder -->
                <img src="~/assets/Sofa.jpeg" alt="Imagem decorativa" class="img-fluid h-100 align-items-center">
            </div>

            <!-- Coluna do Formulário -->
            <div class="col-md-6 d-flex align-items-center">
                <div class="form-column-content w-100">

                    <div class="text-center mb-1">
                        <img src="~/assets/LogoSite.jpeg" alt="" id="logo">
                    </div>
                    <!-- Seu HTML do formulário de registro -->
                    <div class="form-container">
                        <h2>Crie sua Conta</h2>
                        <form id="registrationForm">
                            <div class="form-group">
                                <label for="nome">Nome Completo</label>
                                <input type="text" id="nome" name="nome" placeholder="Digite seu nome completo"
                                    required>
                            </div>

                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input type="email" id="email" name="email" placeholder="seuemail@exemplo.com" required>
                            </div>

                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <input type="text" id="cpf" name="cpf" placeholder="000.000.000-00" required
                                    pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}">
                            </div>

                            <div class="form-group">
                                <label for="telefone">Telefone</label>
                                <input type="tel" id="telefone" name="telefone" placeholder="(00) 00000-0000" required
                                    pattern="\(\d{2}\)\s?\d{4,5}-\d{4}">
                            </div>

                            <button type="submit" class="btn-submit">Registrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>